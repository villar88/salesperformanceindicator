                    function setAction(arg)
                    {
                        if(arg=="1"){
                            document.getElementById("prueba").submit();
                        }
                        if(arg=="2"){
                            document.getElementById("prueba").action="<?php echo e(url('/users/searchByStatus')); ?>";
                            document.getElementById("prueba").submit();
                        }
                    }


