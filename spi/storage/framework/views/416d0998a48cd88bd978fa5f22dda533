                                    <?php echo Form::select('companies',array('default' => 'All Companies') + \App\Company::where('status','ACTIVE')->orderBy('name')->lists('name', 'id') , 'default' , ['class' => 'form-control','onchange' => 'setAction("1");'] ); ?>

